<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/img_abroad_commodity"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/replace" />

    <TextView
        android:id="@+id/txt_abroad_commodity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/img_abroad_commodity"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/txt_abroad_commodity_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_abroad_commodity_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/img_abroad_commodity"
        android:text="￥ 158.00"
        android:textColor="@color/ThemeRed"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_replace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_abroad_commodity_price"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/img_abroad_commodity"
        android:text="跨境直邮.引领精致生活方式"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/btn_replace"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@id/img_abroad_commodity"
        android:background="@color/gray" />

    <Button
        android:clickable="false"
        android:id="@+id/btn_replace"
        style="@style/myButton_Present"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/img_abroad_commodity"
        android:layout_alignLeft="@+id/view"
        android:text="立即购买"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>