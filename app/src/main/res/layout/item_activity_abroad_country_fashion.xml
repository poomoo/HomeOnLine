<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_country_fashion_commodity"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/replace2b3" />
    <LinearLayout
        android:id="@+id/llayout_country_fashion_commodity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_4"
        android:visibility="gone">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/replace2b3" />

        <TextView
            android:id="@+id/txt_country_fashion_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text="商品名字商品名字商品名字"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_country_fashion_commodity_onSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/shape_rectangle_dash_red"
            android:text="立省￥64"
            android:textColor="@color/pink"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_country_fashion_commodity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥235"
                android:textColor="@color/pink"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/txt_country_fashion_commodity_oldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_toRightOf="@+id/txt_country_fashion_commodity_price"
                android:text="￥299"
                android:textSize="@dimen/sp_10" />

            <Button
                style="@style/myButton_Present"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:clickable="false"
                android:text="详情"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>