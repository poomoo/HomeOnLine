<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_guess"
        android:padding="@dimen/dp_8"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_commodity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/txt_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品名字"
            android:textColor="@color/ThemeTextColor"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/txt_commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:minWidth="80dp"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/shape_rectangle_red"
            android:text="￥9999.99"
            android:textColor="@color/ThemeRed"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>