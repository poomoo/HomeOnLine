<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_4">

    <ImageView
        android:id="@+id/img_info_country_commodity"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/replace" />

    <TextView
        android:id="@+id/txt_country_info_commodityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="商品名字商品名字商品名字"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_country_info_commodity_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品副标题"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/txt_country_info_commodity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_4"
            android:background="@drawable/shape_rectangle_pink"
            android:ellipsize="end"
            android:gravity="center"
            android:text="化妆品"
            android:textColor="@color/pink"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/txt_country_info_commodity_onSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/txt_country_info_commodity_type"
            android:background="@drawable/shape_rectangle_pink"
            android:ellipsize="end"
            android:gravity="center"
            android:text="买立省"
            android:textColor="@color/pink"
            android:textSize="@dimen/sp_10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:id="@+id/txt_country_info_commodity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="￥235"
            android:textColor="@color/pink"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/txt_country_info_commodity_oldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@+id/txt_country_info_commodity_price"
            android:text="￥235"
            android:textSize="@dimen/sp_12" />

        <Button
            style="@style/myButton_Present"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:text="点击详情"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</LinearLayout>