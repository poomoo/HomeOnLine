<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_country_popularity_ad"
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:scaleType="centerCrop"
            android:src="@drawable/replace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_country_popularity_commodity1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/replace2" />
            <LinearLayout
                android:id="@+id/llayout_country_popularity_commodity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dp_4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/replace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_country_popularity_commodity1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:minLines="2"
                        android:text="商品名字商品名字商品名字商品名字"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/txt_country_popularity_commodity1_onSale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rectangle_dash_red"
                        android:text="立省￥311    "
                        android:textColor="@color/pink"
                        android:textSize="@dimen/sp_10" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_country_popularity_commodity1_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="￥349"
                            android:textColor="@color/ThemeRed"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/txt_country_popularity_commodity1_oldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:layout_toRightOf="@+id/txt_country_popularity_commodity1_price"
                            android:text="￥680"
                            android:textSize="@dimen/sp_10" />

                        <Button
                            style="@style/myButton_Present"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right"
                            android:text="详情"
                            android:textSize="@dimen/sp_10" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/ThemeBg" />
            <ImageView
                android:id="@+id/img_country_popularity_commodity2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/replace2" />
            <LinearLayout
                android:id="@+id/llayout_country_popularity_commodity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingRight="@dimen/dp_4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/replace" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_country_popularity_commodity2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:minLines="2"
                        android:text="商品名字商品名字商品名字商品名字"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/txt_country_popularity_commodity2_onSale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_rectangle_dash_red"
                        android:text="立省￥311    "
                        android:textColor="@color/pink"
                        android:textSize="@dimen/sp_10" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_country_popularity_commodity2_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="￥349"
                            android:textColor="@color/ThemeRed"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/txt_country_popularity_commodity2_oldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:layout_toRightOf="@+id/txt_country_popularity_commodity2_price"
                            android:text="￥680"
                            android:textSize="@dimen/sp_10" />

                        <Button
                            style="@style/myButton_Present"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right"
                            android:text="详情"
                            android:textSize="@dimen/sp_10" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>